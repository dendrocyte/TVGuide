<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <!-- 固定高度80dp   -->

    <ImageView
        android:id="@+id/iVthumbnail"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <!--FIXME 再多設計no content UI, 待捕上 android:background="@color/color_empty_frame"-->

    <ImageView
        android:id="@+id/iVmask"
        android:layout_width="0dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:background="@color/mask"
        app:layout_constraintTop_toTopOf="@id/iVthumbnail"
        app:layout_constraintEnd_toEndOf="@id/iVthumbnail"
        app:layout_constraintStart_toStartOf="@id/iVthumbnail"
        app:layout_constraintBottom_toBottomOf="@id/iVthumbnail"/>

    <TextView
        android:id="@+id/tVtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:maxLines="2"
        android:textStyle="bold"
        android:textSize="@dimen/sp_10"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_12"
        android:ellipsize="end"
        android:lineSpacingExtra="4dp"
        app:layout_constraintBottom_toBottomOf="@id/iVthumbnail"
        app:layout_constraintEnd_toEndOf="@id/iVthumbnail"
        app:layout_constraintStart_toStartOf="@id/iVthumbnail"
        app:layout_constraintTop_toTopOf="@id/iVthumbnail"
        tools:text="Label" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tVmsg"
        android:text="No Content Available"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_10"
        android:textStyle="bold"
        android:maxLines="3"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="9dp"
        app:layout_constraintTop_toTopOf="@id/iVthumbnail"
        app:layout_constraintEnd_toEndOf="@id/iVthumbnail"
        app:layout_constraintBottom_toBottomOf="@id/iVthumbnail"
        app:layout_constraintStart_toStartOf="@id/iVthumbnail"
        />





</androidx.constraintlayout.widget.ConstraintLayout>